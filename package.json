{
  "name": "illusory",
  "version": "0.0.0",
  "description": "Seamlessly morph one element into another.",
  "keywords": [
    "illusory",
    "morph",
    "transform",
    "ramjet",
    "shared element",
    "morph element",
    "transition",
    "animation",
    "element transition"
  ],
  "main": "dist/cjs/index.js",
  "module": "dist/es/index.js",
  "browser": "dist/iife/index.js",
  "unpkg": "dist/iife/index.js",
  "types": "dist/types/index.d.ts",
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "test": "jest",
    "build": "rollup --config",
    "dev": "npm run build -- --watch",
    "serve": "live-server ./demo --mount=/index.js:./dist/iife/index.js --no-browser",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "tslint -p tsconfig.json",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/justintaddei/illusory.git"
  },
  "author": "Justin Taddei <justin@justintaddei.com> (https://justintaddei.com/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/justintaddei/illusory/issues"
  },
  "homepage": "https://github.com/justintaddei/illusory#readme",
  "devDependencies": {
    "@types/jest": "^25.2.1",
    "jest": "^25.3.0",
    "prettier": "^1.19.1",
    "rollup": "^2.6.0",
    "rollup-plugin-typescript2": "^0.27.0",
    "ts-jest": "^25.3.1",
    "tslint": "^6.1.1",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.8.3"
  }
}
